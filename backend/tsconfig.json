{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
    "backend.d.ts"
  ],
  "exclude": ["node_modules"]   
}